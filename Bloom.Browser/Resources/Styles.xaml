<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    
    <Style TargetType="{x:Type telerik:RadDocking}">
        <Setter Property="AllowDragReorder" Value="True" />
        <Setter Property="Background" Value="{DynamicResource ShellBackgroundBrush}" />
        <Setter Property="CloseButtonPosition" Value="InPane" />
        <Setter Property="Foreground" Value="{DynamicResource NormalForegroundBrush}" />
    </Style>
    
    <Style x:Key="SidebarStyle" TargetType="{x:Type telerik:RadPaneGroup}">
        <Setter Property="Background" Value="{DynamicResource SidebarBackgroundBrush}" />
    </Style>
    
</ResourceDictionary>
