<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    
    <Style x:Key="ViewMenuRootItemStyle" TargetType="telerik:RadMenuItem">
        <Setter Property="Icon">
            <Setter.Value>
                <Image Source="{DynamicResource ViewMenuIcon}" Width="20" Margin="0 0 10 0" />
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="ViewMenuItemStyle" TargetType="telerik:RadMenuItem">
        <Setter Property="IconTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Image Source="{Binding}"
                               MaxWidth="15" 
                               MaxHeight="15" 
                               MinWidth="15" 
                               MinHeight="15" 
                               Stretch="Fill" 
                               Opacity="0.8"
                               HorizontalAlignment="Center" 
                               Margin="0 0 5 0" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Icon" Value="{Binding ImageUrl}"/>
        <Setter Property="Header" Value="{Binding Text}"/>
    </Style>

</ResourceDictionary>
